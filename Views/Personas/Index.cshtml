@model IEnumerable<CrudMVCApp.Models.Persona>

@{
    ViewData["Title"] = "ABM de Clientes";
}

<div class="container mt-4">
    <!-- Header y Controles -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-5 fw-bold text-primary mb-2">Gestión de Clientes</h1>
            <p class="text-muted">Administre los clientes registrados en el sistema</p>
        </div>
        <a asp-action="Create" class="btn btn-primary rounded-4 px-4 py-2 fw-semibold">
            <i class="fas fa-user-plus me-2"></i> Nuevo Cliente
        </a>
    </div>

    <!-- Estadísticas Rápidas -->
    @{
        var clientesActivos = Model.Count(p => p.Activo == true);
        var totalClientes = Model.Count();
    }
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3"
                             style="width: 50px; height: 50px;">
                            <i class="fas fa-users text-white"></i>
                        </div>
                        <div>
                            <h4 class="fw-bold text-dark mb-0">@clientesActivos</h4>
                            <small class="text-muted">Clientes Activos</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="bg-success rounded-circle d-flex align-items-center justify-content-center me-3"
                             style="width: 50px; height: 50px;">
                            <i class="fas fa-chart-line text-white"></i>
                        </div>
                        <div>
                            <h4 class="fw-bold text-dark mb-0">@totalClientes</h4>
                            <small class="text-muted">Total Registrados</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="bg-info rounded-circle d-flex align-items-center justify-content-center me-3"
                             style="width: 50px; height: 50px;">
                            <i class="fas fa-sync-alt text-white"></i>
                        </div>
                        <div>
                            <h4 class="fw-bold text-dark mb-0">@DateTime.Now.ToString("dd/MM")</h4>
                            <small class="text-muted">Actualizado hoy</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Card Principal de la Tabla -->
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-0">
            @if (Model.Any(p => p.Activo == true))
            {
                <!-- Tabla de Clientes -->
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-primary">
                            <tr>
                                <th class="ps-4 py-3 fw-semibold">
                                    <i class="fas fa-user me-2"></i>Nombre
                                </th>
                                <th class="py-3 fw-semibold">
                                    <i class="fas fa-user me-2"></i>Apellido
                                </th>
                                <th class="py-3 fw-semibold">
                                    <i class="fas fa-id-card me-2"></i>CUIT
                                </th>
                                <th class="py-3 fw-semibold">
                                    <i class="fas fa-venus-mars me-2"></i>Género
                                </th>
                                <th class="text-center pe-4 py-3 fw-semibold">
                                    <i class="fas fa-cogs me-2"></i>Acciones
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                @if (item.Activo == true)
                                {
                                    <tr class="border-bottom">
                                        <td class="ps-4 py-3 fw-medium">
                                            @Html.DisplayFor(modelItem => item.Nombre)
                                        </td>
                                        <td class="py-3">
                                            @Html.DisplayFor(modelItem => item.Apellido)
                                        </td>
                                        <td class="py-3">
                                            <code class="bg-light px-2 py-1 rounded-2">@Html.DisplayFor(modelItem => item.Cuit)</code>
                                        </td>
                                        <td class="py-3">
                                            @{var generoText = item.Genero == 'm' ? "Masculino" :
                                                               item.Genero == 'f' ? "Femenino" :
                                                               item.Genero == 'o' ? "Otro" : "No especificado";
                                              var generoColor = item.Genero == 'm' ? "primary" :
                                                                item.Genero == 'f' ? "danger" :
                                                                item.Genero == 'o' ? "success" : "secondary";
                                            }
                                            <span class="badge bg-@generoColor">@generoText</span>
                                        </td>
                                        <td class="pe-4 py-3">
                                            <div class="d-flex justify-content-center gap-2">
                                                <!-- Botón Editar -->
                                                <a asp-action="Edit" asp-route-id="@item.Id"
                                                   class="btn btn-outline-primary btn-sm rounded-3 px-3 py-2"
                                                   data-bs-toggle="tooltip" title="Editar cliente">
                                                    <i class="fas fa-edit"></i>
                                                </a>

                                                <!-- Botón Detalles -->
                                                <a asp-action="Details" asp-route-id="@item.Id"
                                                   class="btn btn-outline-info btn-sm rounded-3 px-3 py-2"
                                                   data-bs-toggle="tooltip" title="Ver detalles">
                                                    <i class="fas fa-eye"></i>
                                                </a>

                                                <!-- Botón Eliminar -->
                                                <a asp-action="Delete" asp-route-id="@item.Id"
                                                   class="btn btn-outline-danger btn-sm rounded-3 px-3 py-2"
                                                   data-bs-toggle="tooltip" title="Eliminar cliente">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Contador de registros -->
                <div class="card-footer bg-light rounded-bottom-4 p-3">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                Mostrando <strong>@clientesActivos</strong> cliente(s) activo(s) de <strong>@totalClientes</strong> registrados
                            </small>
                        </div>
                        <div class="col-md-6 text-end">
                            <small class="text-muted">
                                <i class="fas fa-filter me-1"></i>
                                Filtrado: Solo clientes activos
                            </small>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- Mensaje cuando no hay clientes activos -->
                <div class="text-center py-5">
                    <i class="fas fa-users-slash display-1 text-muted mb-3"></i>
                    <h4 class="text-muted">No hay clientes activos</h4>
                    <p class="text-muted mb-4">Todos los clientes registrados están inactivos o no hay clientes en el sistema.</p>
                    <a asp-action="Create" class="btn btn-primary rounded-4 px-4 py-2">
                        <i class="fas fa-user-plus me-2"></i> Crear Primer Cliente
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Información adicional -->
    <div class="mt-3">
        <div class="alert alert-info rounded-3">
            <div class="d-flex align-items-center">
                <i class="fas fa-lightbulb me-2 fs-4"></i>
                <div>
                    <strong>Tip:</strong> Use las acciones de editar, ver detalles o eliminar para gestionar cada cliente individualmente.
                    Solo se muestran clientes con estado activo.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Inicializar tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function(tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });

            // Efecto hover en las filas
            const tableRows = document.querySelectorAll('tbody tr');
            tableRows.forEach(row => {
                row.addEventListener('mouseenter', function() {
                    this.style.backgroundColor = '#f8f9fa';
                    this.style.transform = 'translateY(-1px)';
                    this.style.transition = 'all 0.2s ease';
                });
                row.addEventListener('mouseleave', function() {
                    this.style.backgroundColor = '';
                    this.style.transform = '';
                });
            });

            // Efecto hover en las cards de estadísticas
            const statCards = document.querySelectorAll('.card.shadow-sm');
            statCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                    this.style.transition = 'all 0.3s ease';
                });
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
        });
    </script>
}

<!-- Estilos adicionales -->
<style>
    .table th {
        border-bottom: 2px solid #dee2e6;
    }

    .table td {
        vertical-align: middle;
        border-bottom: 1px solid #f0f0f0;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa !important;
    }

    .card {
        background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    }

    .btn-sm {
        padding: 0.4rem 0.8rem;
        font-size: 0.875rem;
    }

    code {
        font-family: 'Courier New', monospace;
        font-size: 0.875rem;
    }

    .badge {
        font-size: 0.75rem;
        padding: 0.4rem 0.8rem;
    }
</style>