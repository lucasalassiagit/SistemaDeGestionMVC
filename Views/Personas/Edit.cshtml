@model CrudMVCApp.Models.Persona

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <!-- Header mejorado -->
            <div class="text-center mb-5">
                <h1 class="display-5 fw-bold text-primary mb-2">Editar Cliente</h1>
                <p class="text-muted fs-5">Modifique los datos del cliente seleccionado</p>
                <div class="border-bottom mx-auto" style="width: 80px; border-color: #0d6efd !important;"></div>
            </div>

            <!-- Card container -->
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4"></div>
                        <input type="hidden" asp-for="Id" />

                        <!-- Información Personal -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-group">
                                    <label asp-for="Nombre" class="form-label fw-semibold"></label>
                                    <input asp-for="Nombre" class="form-control border-dark rounded-3"
                                           style="border-width: 2px !important;"
                                           placeholder="Ingrese el nombre" />
                                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <div class="form-group">
                                    <label asp-for="Apellido" class="form-label fw-semibold"></label>
                                    <input asp-for="Apellido" class="form-control border-dark rounded-3"
                                           style="border-width: 2px !important;"
                                           placeholder="Ingrese el apellido" />
                                    <span asp-validation-for="Apellido" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-group">
                                    <label asp-for="Dni" class="form-label fw-semibold"></label>
                                    <input asp-for="Dni" class="form-control border-dark rounded-3"
                                           style="border-width: 2px !important;"
                                           placeholder="Ingrese el DNI" />
                                    <span asp-validation-for="Dni" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <div class="form-group">
                                    <label asp-for="Cuit" class="form-label fw-semibold">CUIT</label>
                                    <input asp-for="Cuit" class="form-control border-dark rounded-3"
                                           style="border-width: 2px !important;"
                                           placeholder="Ingrese el CUIT" />
                                    <span asp-validation-for="Cuit" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Género -->
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="form-group">
                                    <label class="form-label fw-semibold">Género</label>
                                    <select name="Genero" asp-for="Genero"
                                            class="form-control border-dark rounded-3"
                                            style="border-width: 2px !important;" required>
                                        <option value="">-- Seleccionar --</option>
                                        <option value="m">Masculino</option>
                                        <option value="f">Femenino</option>
                                        <option value="o">Otro</option>
                                    </select>
                                    <span asp-validation-for="Genero" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Formas de Pago -->
                        <div class="mb-4">
                            <h5 class="fw-bold text-dark mb-3">
                                <i class="fas fa-credit-card me-2"></i>Formas de Pago Preferidas
                            </h5>

                            <div class="card border-0 shadow-sm rounded-3">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-check p-3 border rounded-3 h-100 payment-option @(Model.Efectivo ? "border-success" : "")">
                                                <input asp-for="Efectivo" class="form-check-input" />
                                                <label asp-for="Efectivo" class="form-check-label fw-semibold">
                                                    <i class="fas fa-money-bill-wave me-2 text-success"></i>Efectivo
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-check p-3 border rounded-3 h-100 payment-option @(Model.Tarjeta ? "border-primary" : "")">
                                                <input asp-for="Tarjeta" class="form-check-input" />
                                                <label asp-for="Tarjeta" class="form-check-label fw-semibold">
                                                    <i class="fas fa-credit-card me-2 text-primary"></i>Tarjeta
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-check p-3 border rounded-3 h-100 payment-option @(Model.Transferencia ? "border-info" : "")">
                                                <input asp-for="Transferencia" class="form-check-input" />
                                                <label asp-for="Transferencia" class="form-check-label fw-semibold">
                                                    <i class="fas fa-exchange-alt me-2 text-info"></i>Transferencia
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Información del ID -->
                        <div class="alert alert-info rounded-3">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-info-circle me-2"></i>
                                <div>
                                    <strong>Cliente ID:</strong> @Model.Id
                                    <small class="text-muted d-block mt-1">Este identificador no se puede modificar</small>
                                </div>
                            </div>
                        </div>

                        <!-- Botones mejorados -->
                        <div class="d-flex justify-content-between align-items-center pt-3">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-4 px-4 py-2">
                                <i class="fas fa-arrow-left me-2"></i> Volver al Listado
                            </a>
                            <button type="submit" class="btn btn-primary rounded-4 px-4 py-2 fw-semibold">
                                <i class="fas fa-save me-2"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- Script para mejorar la experiencia de usuario -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Agregar foco a los campos con borde más oscuro
            const inputs = document.querySelectorAll('.form-control');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.style.borderColor = '#000';
                    this.style.boxShadow = '0 0 0 0.2rem rgba(0, 0, 0, 0.1)';
                });
                input.addEventListener('blur', function() {
                    this.style.borderColor = '#000';
                    this.style.boxShadow = 'none';
                });
            });

            // Efectos en los checkboxes de formas de pago
            const paymentOptions = document.querySelectorAll('.payment-option');
            paymentOptions.forEach(option => {
                const checkbox = option.querySelector('.form-check-input');

                checkbox.addEventListener('change', function() {
                    if (this.checked) {
                        option.style.borderColor = getBorderColor(option);
                        option.style.backgroundColor = '#f8f9fa';
                    } else {
                        option.style.borderColor = '#dee2e6';
                        option.style.backgroundColor = '';
                    }
                });

                // Efecto hover en los contenedores de checkboxes
                option.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-2px)';
                    this.style.transition = 'all 0.3s ease';
                });
                option.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });

            // Función para obtener el color del borde según la opción
            function getBorderColor(option) {
                if (option.querySelector('.fa-money-bill-wave')) return '#198754'; // Success
                if (option.querySelector('.fa-credit-card')) return '#0d6efd'; // Primary
                if (option.querySelector('.fa-exchange-alt')) return '#0dcaf0'; // Info
                return '#6c757d'; // Default
            }

            // Preseleccionar el género actual
            const currentGenero = '@Model.Genero';
            if (currentGenero) {
                const generoSelect = document.querySelector('select[name="Genero"]');
                if (generoSelect) {
                    generoSelect.value = currentGenero;
                }
            }
        });
    </script>
}

<!-- Estilos adicionales -->
<style>
    .card {
        background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    }

    .form-check {
        cursor: pointer;
    }

    .form-check-input {
        transform: scale(1.2);
        margin-right: 10px;
    }

    .payment-option {
        transition: all 0.3s ease;
        border: 2px solid #dee2e6 !important;
    }

    .btn {
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
        }

    .border-success {
        border-color: #198754 !important;
    }

    .border-primary {
        border-color: #0d6efd !important;
    }

    .border-info {
        border-color: #0dcaf0 !important;
    }
</style>