@model CrudMVCApp.Models.Direccion

@{
    ViewData["Title"] = "Crear Direccion";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="text-center mb-5">
                <h1 class="display-5 fw-bold text-primary mb-2">Nueva Dirección</h1>
                <p class="text-muted fs-5">Complete el formulario para agregar una nueva dirección</p>
                <div class="border-bottom mx-auto" style="width: 80px; border-color: #6c757d !important;"></div>
            </div>

            <!-- Card container -->
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4"></div>

                        <!-- Grupo de Campos de Dirección -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-group">
                                    <label asp-for="Calle" class="form-label fw-semibold"></label>
                                    <input asp-for="Calle" class="form-control border-dark rounded-3"
                                           style="border-width: 2px !important;" />
                                    <span asp-validation-for="Calle" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <div class="form-group">
                                    <label asp-for="Ciudad" class="form-label fw-semibold"></label>
                                    <input asp-for="Ciudad" class="form-control border-dark rounded-3"
                                           style="border-width: 2px !important;" />
                                    <span asp-validation-for="Ciudad" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-group">
                                    <label asp-for="CodigoPostal" class="form-label fw-semibold"></label>
                                    <input asp-for="CodigoPostal" class="form-control border-dark rounded-3"
                                           style="border-width: 2px !important;" />
                                    <span asp-validation-for="CodigoPostal" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <div class="form-group">
                                    <label asp-for="PersonaId" class="form-label fw-semibold">Persona</label>
                                    <select asp-for="PersonaId" class="form-control border-dark rounded-3"
                                            style="border-width: 2px !important;" asp-items="ViewBag.PersonaId">
                                        <option value="">-- Seleccione una Persona --</option>
                                    </select>
                                    <span asp-validation-for="PersonaId" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-between align-items-center pt-3">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-4 px-4 py-2">
                                <i class="fas fa-arrow-left me-2"></i> Volver al Listado
                            </a>
                            <button type="submit" class="btn btn-primary rounded-4 px-4 py-2 fw-semibold">
                                <i class="fas fa-plus-circle me-2"></i> Crear Dirección
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const inputs = document.querySelectorAll('.form-control');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.style.borderColor = '#000';
                    this.style.boxShadow = '0 0 0 0.2rem rgba(0, 0, 0, 0.1)';
                });
                input.addEventListener('blur', function() {
                    this.style.borderColor = '#000';
                    this.style.boxShadow = 'none';
                });
            });
        });
    </script>
}