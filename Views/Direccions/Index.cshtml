@model IEnumerable<CrudMVCApp.Models.Direccion>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-5 fw-bold text-primary mb-2">Direcciones</h1>
            <p class="text-muted">Gestión de direcciones registradas en el sistema</p>
        </div>
        <a asp-action="Create" class="btn btn-primary rounded-4 px-4 py-2 fw-semibold">
            <i class="fas fa-plus-circle me-2"></i> Nueva Dirección
        </a>
    </div>

    <!-- Card container para la tabla -->
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-primary">
                        <tr>
                            <th class="ps-4 py-3 fw-semibold">
                                <i class="fas fa-road me-2"></i>
                                @Html.DisplayNameFor(model => model.Calle)
                            </th>
                            <th class="py-3 fw-semibold">
                                <i class="fas fa-city me-2"></i>
                                @Html.DisplayNameFor(model => model.Ciudad)
                            </th>
                            <th class="py-3 fw-semibold">
                                <i class="fas fa-mail-bulk me-2"></i>
                                @Html.DisplayNameFor(model => model.CodigoPostal)
                            </th>
                            <th class="py-3 fw-semibold">
                                <i class="fas fa-user me-2"></i>
                                Persona
                            </th>
                            <th class="text-center pe-4 py-3 fw-semibold">
                                <i class="fas fa-cogs me-2"></i>
                                Acciones
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="border-bottom">
                                <td class="ps-4 py-3 fw-medium">
                                    @Html.DisplayFor(modelItem => item.Calle)
                                </td>
                                <td class="py-3">
                                    @Html.DisplayFor(modelItem => item.Ciudad)
                                </td>
                                <td class="py-3">
                                    <span class="badge bg-light text-dark fs-6">
                                        @Html.DisplayFor(modelItem => item.CodigoPostal)
                                    </span>
                                </td>
                                <td class="py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3"
                                             style="width: 35px; height: 35px;">
                                            <i class="fas fa-user text-white small"></i>
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@Html.DisplayFor(modelItem => item.Persona.Nombre) @Html.DisplayFor(modelItem => item.Persona.Apellido)</div>
                                            <small class="text-muted">ID: @Html.DisplayFor(modelItem => item.Persona.Id)</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="pe-4 py-3">
                                    <div class="d-flex justify-content-center gap-2">
                                        <!-- Botón Editar -->
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="btn btn-outline-primary btn-sm rounded-3 px-3 py-2"
                                           data-bs-toggle="tooltip" title="Editar dirección">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        <!-- Botón Detalles -->
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-outline-info btn-sm rounded-3 px-3 py-2"
                                           data-bs-toggle="tooltip" title="Ver detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        <!-- Botón Eliminar -->
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="btn btn-outline-danger btn-sm rounded-3 px-3 py-2"
                                           data-bs-toggle="tooltip" title="Eliminar dirección">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Mensaje cuando no hay datos -->
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox display-1 text-muted mb-3"></i>
                    <h4 class="text-muted">No hay direcciones registradas</h4>
                    <p class="text-muted mb-4">Comience agregando una nueva dirección al sistema.</p>
                    <a asp-action="Create" class="btn btn-primary rounded-4 px-4 py-2">
                        <i class="fas fa-plus-circle me-2"></i> Crear Primera Dirección
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Contador de registros -->
    @if (Model.Any())
    {
        <div class="mt-3 text-end">
            <small class="text-muted">
                Mostrando <strong>@Model.Count()</strong> dirección(es) registrada(s)
            </small>
        </div>
    }
</div>

<!-- Script para tooltips -->
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Inicializar tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function(tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });

            // Efecto hover en las filas
            const tableRows = document.querySelectorAll('tbody tr');
            tableRows.forEach(row => {
                row.addEventListener('mouseenter', function() {
                    this.style.backgroundColor = '#f8f9fa';
                    this.style.transform = 'translateY(-1px)';
                    this.style.transition = 'all 0.2s ease';
                });
                row.addEventListener('mouseleave', function() {
                    this.style.backgroundColor = '';
                    this.style.transform = '';
                });
            });
        });
    </script>
}


<style>
    .table th {
        border-bottom: 2px solid #dee2e6;
        font-weight: 600;
    }

    .table td {
        vertical-align: middle;
        border-bottom: 1px solid #f0f0f0;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa !important;
    }

    .btn-sm {
        padding: 0.4rem 0.8rem;
        font-size: 0.875rem;
    }
</style>