                                <div class="d-flex align-items-center bg-light rounded-3 p-3 h-100">
                                    <i class="fas fa-icons text-secondary fs-3 me-3"></i>
                                    <div>
                                        <h6 class="fw-bold mb-1">Font Awesome</h6>
                                        <small class="text-muted">Iconografía</small>
                                    </div>
                                </div>
                            </div>
