                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer Información -->
            <div class="text-center mt-4">
                <small class="text-muted">
                    Desarrollado con dedicación para demostrar habilidades en .NET MVC - @DateTime.Now.Year
                </small>
            </div>
        </div>
    </div>
</div>

<!-- Estilos adicionales -->
<style>
    .feature-card {
        transition: all 0.3s ease;
        border: 1px solid #f0f0f0;
    }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.1) !important;
        }

    .card {
        background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    }

    .bg-light {
        transition: all 0.3s ease;
    }

        .bg-light:hover {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%) !important;
            transform: translateY(-2px);
        }
</style>

<!-- Script para efectos interactivos -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Efectos hover en las cards de características
        const featureCards = document.querySelectorAll('.feature-card');
        featureCards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px)';
            });
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });

        // Efectos en las tecnologías
        const techItems = document.querySelectorAll('.bg-light');
        techItems.forEach(item => {
            item.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-2px)';
            });
            item.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });
    });
</script>