@model CrudMVCApp.Models.Producto

@{
    ViewData["Title"] = "Detalles Producto";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <!-- Header mejorado -->
            <div class="text-center mb-5">
                <h1 class="display-5 fw-bold text-primary mb-2">Detalles del Producto</h1>
                <p class="text-muted fs-5">Información completa del producto registrado</p>
                <div class="border-bottom mx-auto" style="width: 80px; border-color: #0d6efd !important;"></div>
            </div>

            <!-- Card container -->
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4 p-md-5">
                    <!-- Información Principal -->
                    <div class="row mb-4">
                        <div class="col-md-8">
                            <div class="d-flex align-items-center mb-3">
                                <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3"
                                     style="width: 60px; height: 60px;">
                                    <i class="fas fa-box text-white fs-4"></i>
                                </div>
                                <div>
                                    <h3 class="fw-bold text-dark mb-1">@Model.Nombre</h3>
                                    <p class="text-muted mb-0">Producto ID: @Model.Id</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 text-end">
                            <div class="bg-opacity-10 rounded-3 p-3">
                                <h5 class="fw-bold text-primary mb-1">Estado</h5>
                                @if (Model.Stock > 0)
                                {
                                    <span class="badge bg-success fs-6">En Stock</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning fs-6">Sin Stock</span>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Información del Producto -->
                    <div class="row mb-5">
                        <div class="col-md-6">
                            <div class="card border-0 shadow-sm rounded-3 h-100">
                                <div class="card-body">
                                    <h5 class="fw-bold text-primary mb-3">
                                        <i class="fas fa-info-circle me-2"></i>Información General
                                    </h5>
                                    <div class="mb-3">
                                        <strong class="text-muted">Nombre:</strong>
                                        <span class="fw-semibold d-block fs-5">@Model.Nombre</span>
                                    </div>
                                    <div class="mb-3">
                                        <strong class="text-muted">Descripción:</strong>
                                        <span class="fw-semibold d-block">
                                            @if (string.IsNullOrEmpty(Model.Descripcion))
                                            {
                                                <span class="text-muted fst-italic">Sin descripción</span>
                                            }
                                            else
                                            {
                                                @Model.Descripcion
                                            }
                                        </span>
                                    </div>
                                    <div>
                                        <strong class="text-muted">Stock Actual:</strong>
                                        <span class="fw-semibold d-block fs-4">
                                            @if (Model.Stock > 0)
                                            {
                                                <span class="badge bg-success fs-5">@Model.Stock unidades</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary fs-5">Sin stock</span>
                                            }
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card border-0 shadow-sm rounded-3 h-100">
                                <div class="card-body">
                                    <h5 class="fw-bold text-primary mb-3">
                                        <i class="fas fa-chart-line me-2"></i>Información Financiera
                                    </h5>
                                    <div class="mb-3">
                                        <strong class="text-muted">Precio de Compra:</strong>
                                        <span class="fw-semibold d-block fs-5 text-success">
                                            <i class="fas fa-dollar-sign me-1"></i>@Model.PrecioCompra.ToString("F2")
                                        </span>
                                    </div>
                                    <div class="mb-3">
                                        <strong class="text-muted">Precio de Venta:</strong>
                                        <span class="fw-semibold d-block fs-5 text-primary">
                                            <i class="fas fa-dollar-sign me-1"></i>@Model.PrecioVta.ToString("F2")
                                        </span>
                                    </div>
                                    <div>
                                        <strong class="text-muted">Margen de Ganancia:</strong>
                                        @{
                                            var margen = Model.PrecioVta - Model.PrecioCompra;
                                            var porcentajeMargen = Model.PrecioCompra > 0 ? (margen / Model.PrecioCompra * 100) : 0;
                                            var margenColor = margen > 0 ? "success" : margen < 0 ? "danger" : "warning";
                                            var margenIcon = margen > 0 ? "fa-arrow-up" : margen < 0 ? "fa-arrow-down" : "fa-minus";
                                        }
                                        <span class="fw-semibold d-block fs-5 text-@margenColor">
                                            <i class="fas @margenIcon me-1"></i>
                                            $@margen.ToString("F2") (@porcentajeMargen.ToString("F1")%)
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Resumen de Rentabilidad -->
                    <div class="card border-0 shadow-sm rounded-3 bg-light">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <h5 class="fw-bold text-dark mb-2">Resumen de Rentabilidad</h5>
                                    <p class="text-muted mb-0">
                                        <i class="fas fa-chart-pie me-1"></i>
                                        @if (margen > 0)
                                        {
                                            <span>Producto rentable con margen positivo</span>
                                        }
                                        else if (margen < 0)
                                        {
                                            <span>Producto con margen negativo - revisar precios</span>
                                        }
                                        else
                                        {
                                            <span>Producto sin margen - punto de equilibrio</span>
                                        }
                                    </p>
                                </div>
                                <div class="col-md-4 text-end">
                                    <div class="bg-white rounded-3 p-3">
                                        <small class="text-muted d-block">Valor Total en Stock</small>
                                        @{
                                            var valorTotalStock = Model.Stock * Model.PrecioVta;
                                        }
                                        <strong class="fs-4 text-primary">$@valorTotalStock.ToString("F2")</strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Botones de Acción -->
                    <div class="d-flex justify-content-between align-items-center mt-5 pt-3">
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-4 px-4 py-2">
                            <i class="fas fa-arrow-left me-2"></i> Volver al Listado
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary rounded-4 px-4 py-2 fw-semibold">
                                <i class="fas fa-edit me-2"></i> Editar Producto
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Estilos adicionales -->
<style>
    .card {
        background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    }

    .badge {
        padding: 0.5rem 1rem;
    }

    .bg-primary {
        background: linear-gradient(135deg, #0d6efd 0%, #0a58ca 100%) !important;
    }

    .btn {
        transition: all 0.3s ease;
    }

    .btn:hover {
        transform: translateY(-2px);
    }

    .fst-italic {
        font-style: italic !important;
    }
</style>

<!-- Script para efectos interactivos -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Efecto hover en las cards de información
        const infoCards = document.querySelectorAll('.card.shadow-sm');
        infoCards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-5px)';
                this.style.transition = 'all 0.3s ease';
            });
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });

        // Efecto en el badge de stock
        const stockBadge = document.querySelector('.badge.bg-success, .badge.bg-secondary');
        if (stockBadge) {
            stockBadge.addEventListener('mouseenter', function() {
                this.style.transform = 'scale(1.1)';
                this.style.transition = 'transform 0.2s ease';
            });
            stockBadge.addEventListener('mouseleave', function() {
                this.style.transform = 'scale(1)';
            });
        }

        // Efecto en el valor total del stock
        const valorTotalElement = document.querySelector('.fs-4.text-primary');
        if (valorTotalElement) {
            valorTotalElement.addEventListener('mouseenter', function() {
                this.style.transform = 'scale(1.05)';
                this.style.transition = 'transform 0.2s ease';
            });
            valorTotalElement.addEventListener('mouseleave', function() {
                this.style.transform = 'scale(1)';
            });
        }
    });
</script>