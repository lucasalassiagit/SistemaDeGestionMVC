@using Azure.Core
@model IEnumerable<CrudMVCApp.Models.Pedido>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <!-- Header y Controles -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-5 fw-bold text-primary mb-2">Pedidos Registrados</h1>
            <p class="text-muted">Gestión de todos los pedidos del sistema</p>
        </div>
        <a asp-action="Crear" asp-controller="Pedidos" class="btn btn-primary rounded-4 px-4 py-2 fw-semibold">
            <i class="fas fa-plus-circle me-2"></i> Crear Nuevo Pedido
        </a>
    </div>

    <!-- Card de Búsqueda -->
    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body p-4">
            <h5 class="fw-bold text-dark mb-3">
                <i class="fas fa-search me-2"></i>Buscar Pedidos
            </h5>
            <form asp-action="Index" method="get" class="row g-3 align-items-end">
                <div class="col-md-8">
                    <label class="form-label fw-semibold">Buscar por usuario:</label>
                    <input type="text" name="usuarioNombre"
                           class="form-control border-dark rounded-3"
                           style="border-width: 2px !important;"
                           placeholder="Ingrese nombre de usuario..."
                           value="@ViewBag.UsuarioBusqueda" />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary rounded-3 w-100 py-2 fw-semibold">
                        <i class="fas fa-search me-2"></i> Buscar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Card Principal de la Tabla -->
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <!-- Tabla de Pedidos -->
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-primary">
                            <tr>
                                <th class="ps-4 py-3 fw-semibold">
                                    <i class="fas fa-user me-2"></i>Cliente
                                </th>
                                <th class="py-3 fw-semibold">
                                    <i class="fas fa-calendar me-2"></i>Fecha
                                </th>
                                <th class="py-3 fw-semibold">
                                    <i class="fas fa-user-tie me-2"></i>Vendedor
                                </th>
                                <th class="text-center pe-4 py-3 fw-semibold">
                                    <i class="fas fa-cogs me-2"></i>Acciones
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="border-bottom">
                                    <td class="ps-4 py-3">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3"
                                                 style="width: 35px; height: 35px;">
                                                <i class="fas fa-user text-white small"></i>
                                            </div>
                                            <div>
                                                <div class="fw-semibold">@Html.DisplayFor(modelItem => item.Persona.Nombre) @Html.DisplayFor(modelItem => item.Persona.Apellido)</div>
                                                <small class="text-muted">ID: @Html.DisplayFor(modelItem => item.PersonaId)</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="py-3">
                                        <div class="fw-medium">@item.Fecha.ToString("dd/MM/yyyy")</div>
                                        <small class="text-muted">@item.Fecha.ToString("HH:mm") hs</small>
                                    </td>
                                    <td class="py-3">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-success rounded-circle d-flex align-items-center justify-content-center me-3"
                                                 style="width: 35px; height: 35px;">
                                                <i class="fas fa-user-tie text-white small"></i>
                                            </div>
                                            <div>
                                                <div class="fw-semibold">@item.Usuario?.user</div>
                                                <small class="text-muted">Vendedor</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="pe-4 py-3">
                                        <div class="d-flex justify-content-center">
                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-outline-primary btn-sm rounded-3 px-3 py-2"
                                               data-bs-toggle="tooltip" title="Ver detalle del pedido">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Contador de registros -->
                <div class="card-footer bg-light rounded-bottom-4 p-3">
                    <div class="text-end">
                        <small class="text-muted">
                            Mostrando <strong>@Model.Count()</strong> pedido(s) registrado(s)
                        </small>
                    </div>
                </div>
            }
            else
            {
                <!-- Mensaje cuando no hay datos -->
                <div class="text-center py-5">
                    <i class="fas fa-clipboard-list display-1 text-muted mb-3"></i>
                    <h4 class="text-muted">No hay pedidos registrados</h4>
                    <p class="text-muted mb-4">Comience creando un nuevo pedido en el sistema.</p>
                    <a asp-action="Crear" asp-controller="Pedidos" class="btn btn-primary rounded-4 px-4 py-2">
                        <i class="fas fa-plus-circle me-2"></i> Crear Primer Pedido
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Información adicional si hay búsqueda -->
    @if (!string.IsNullOrEmpty(ViewBag.UsuarioBusqueda))
    {
        <div class="mt-3 text-center">
            <small class="text-muted">
                <i class="fas fa-info-circle me-1"></i>
                Mostrando resultados para: "<strong>@ViewBag.UsuarioBusqueda</strong>"
                <a asp-action="Index" class="ms-2 text-primary">Ver todos</a>
            </small>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Inicializar tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function(tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });

            // Efectos de focus en el input de búsqueda
            const searchInput = document.querySelector('input[name="usuarioNombre"]');
            if (searchInput) {
                searchInput.addEventListener('focus', function() {
                    this.style.borderColor = '#000';
                    this.style.boxShadow = '0 0 0 0.2rem rgba(0, 0, 0, 0.1)';
                });
                searchInput.addEventListener('blur', function() {
                    this.style.borderColor = '#000';
                    this.style.boxShadow = 'none';
                });
            }

            // Efecto hover en las filas
            const tableRows = document.querySelectorAll('tbody tr');
            tableRows.forEach(row => {
                row.addEventListener('mouseenter', function() {
                    this.style.backgroundColor = '#f8f9fa';
                    this.style.transform = 'translateY(-1px)';
                    this.style.transition = 'all 0.2s ease';
                });
                row.addEventListener('mouseleave', function() {
                    this.style.backgroundColor = '';
                    this.style.transform = '';
                });
            });
        });
    </script>
}

<!-- Estilos adicionales -->
<style>
    .table th {
        border-bottom: 2px solid #dee2e6;
    }

    .table td {
        vertical-align: middle;
        border-bottom: 1px solid #f0f0f0;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa !important;
    }

    .card {
        background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    }

    .btn-sm {
        padding: 0.4rem 0.8rem;
        font-size: 0.875rem;
    }
</style>