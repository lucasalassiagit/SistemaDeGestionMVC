@model IEnumerable<CrudMVCApp.Models.Pedido>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <!-- Header y Controles para Usuario -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="display-5 fw-bold text-primary mb-2">Mis Pedidos</h1>
            <p class="text-muted">Historial de todos mis pedidos realizados</p>
        </div>
        <a asp-action="Crear" asp-controller="Pedidos" class="btn btn-primary rounded-4 px-4 py-2 fw-semibold">
            <i class="fas fa-plus-circle me-2"></i> Nuevo Pedido
        </a>
    </div>

    <!-- Card Principal de la Tabla -->
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <!-- Tabla de Pedidos del Usuario -->
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-primary">
                            <tr>
                                <th class="ps-4 py-3 fw-semibold">
                                    <i class="fas fa-user me-2"></i>Cliente
                                </th>
                                <th class="py-3 fw-semibold">
                                    <i class="fas fa-calendar me-2"></i>Fecha
                                </th>
                                <th class="py-3 fw-semibold">
                                    <i class="fas fa-user-tie me-2"></i>Vendedor
                                </th>
                                <th class="text-center pe-4 py-3 fw-semibold">
                                    <i class="fas fa-eye me-2"></i>Detalles
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="border-bottom">
                                    <td class="ps-4 py-3">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-3"
                                                 style="width: 35px; height: 35px;">
                                                <i class="fas fa-user text-white small"></i>
                                            </div>
                                            <div>
                                                <div class="fw-semibold">@Html.DisplayFor(modelItem => item.Persona.Nombre) @Html.DisplayFor(modelItem => item.Persona.Apellido)</div>
                                                <small class="text-muted">ID: @Html.DisplayFor(modelItem => item.PersonaId)</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="py-3">
                                        <div class="fw-medium">@item.Fecha.ToString("dd/MM/yyyy")</div>
                                        <small class="text-muted">@item.Fecha.ToString("HH:mm") hs</small>
                                    </td>
                                    <td class="py-3">
                                        <div class="d-flex align-items-center">
                                            <div class="bg-success rounded-circle d-flex align-items-center justify-content-center me-3"
                                                 style="width: 35px; height: 35px;">
                                                <i class="fas fa-user-tie text-white small"></i>
                                            </div>
                                            <div>
                                                <div class="fw-semibold">@item.Usuario.user</div>
                                                <small class="text-muted">Vendedor asignado</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="pe-4 py-3">
                                        <div class="d-flex justify-content-center">
                                            <a asp-action="Details" asp-route-id="@item.Id"
                                               class="btn btn-outline-primary rounded-3 px-3 py-2 fw-semibold"
                                               data-bs-toggle="tooltip" title="Ver detalle completo del pedido">
                                                <i class="fas fa-eye me-2"></i> Ver Detalle
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Contador de registros -->
                <div class="card-footer bg-light rounded-bottom-4 p-3">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                Mostrando <strong>@Model.Count()</strong> de mis pedidos
                            </small>
                        </div>
                        <div class="col-md-6 text-end">
                            <small class="text-muted">
                                Última actualización: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                            </small>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- Mensaje cuando no hay pedidos -->
                <div class="text-center py-5">
                    <i class="fas fa-clipboard-list display-1 text-muted mb-3"></i>
                    <h4 class="text-muted">No hay pedidos registrados</h4>
                    <p class="text-muted mb-4">Aún no has realizado ningún pedido en el sistema.</p>
                    <a asp-action="Crear" asp-controller="Pedidos" class="btn btn-primary rounded-4 px-4 py-2 fw-semibold">
                        <i class="fas fa-plus-circle me-2"></i> Crear Mi Primer Pedido
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Información adicional para el usuario -->
    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-plus-circle text-primary display-6 mb-3"></i>
                    <h5 class="fw-bold">Crear Pedido</h5>
                    <p class="text-muted small">Inicia un nuevo proceso de compra para tus clientes</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-eye text-success display-6 mb-3"></i>
                    <h5 class="fw-bold">Ver Detalles</h5>
                    <p class="text-muted small">Revisa la información completa de cada pedido</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-body text-center p-4">
                    <i class="fas fa-history text-info display-6 mb-3"></i>
                    <h5 class="fw-bold">Historial</h5>
                    <p class="text-muted small">Consulta todos tus pedidos anteriores</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Inicializar tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function(tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });

            // Efecto hover en las filas
            const tableRows = document.querySelectorAll('tbody tr');
            tableRows.forEach(row => {
                row.addEventListener('mouseenter', function() {
                    this.style.backgroundColor = '#f8f9fa';
                    this.style.transform = 'translateY(-1px)';
                    this.style.transition = 'all 0.2s ease';
                });
                row.addEventListener('mouseleave', function() {
                    this.style.backgroundColor = '';
                    this.style.transform = '';
                });
            });

            // Efecto hover en las cards informativas
            const infoCards = document.querySelectorAll('.card.shadow-sm');
            infoCards.forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                    this.style.transition = 'all 0.3s ease';
                });
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });
        });
    </script>
}

<!-- Estilos adicionales -->
<style>
    .table th {
        border-bottom: 2px solid #dee2e6;
    }

    .table td {
        vertical-align: middle;
        border-bottom: 1px solid #f0f0f0;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa !important;
    }

    .card {
        background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
    }

    .btn {
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-2px);
        }
</style>